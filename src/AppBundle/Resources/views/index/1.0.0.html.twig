{% extends 'AppBundle:base:1.0.0.html.twig' %}

{% block content %}
	{% for project in projects %}
	<div class='col-xs-12 col-md-6'>
    	<div class='project_box'>
    		<h4 class='project_box_title'>
    			<a class='project_box_link' href="{{ path('projectpage', {'projectName':project.getName()}) }}">
    			    {{ project.getName() }}
    		    </a>
    	    </h4>
    		<p class='project_box_summary'>
    			Build count : {{ project.getBuildCount() }}
    		</p>
    	</div>
	</div>
	{% endfor %}
{% endblock %}